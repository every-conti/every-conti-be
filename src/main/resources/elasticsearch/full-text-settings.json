{
  "analysis": {
    "tokenizer": {
      "nori_mixed_tokenizer": {
        "type": "nori_tokenizer",
        "decompound_mode": "mixed"
      }
    },
    "filter": {
      "nori_pos_filter": {
        "type": "nori_part_of_speech",
        "stoptags": [
          "E", "IC", "J", "MAG", "MAJ", "MM",
          "SP", "SSC", "SSO", "SC", "SE",
          "XPN", "XSA", "XSN", "XSV"
        ]
      }
    },
    "analyzer": {
      "nori": {
        "type": "custom",
        "tokenizer": "nori_mixed_tokenizer",
        "filter": [
          "lowercase",
          "nori_readingform",
          "nori_pos_filter"
        ]
      }
    }
  }
}

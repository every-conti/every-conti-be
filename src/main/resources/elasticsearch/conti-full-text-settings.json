{
  "settings": {
    "analysis": {
      "tokenizer": {
        "nori_mixed_tokenizer": {
          "type": "nori_tokenizer",
          "decompound_mode": "mixed"
        }
      },
      "analyzer": {
        "nori": {
          "type": "custom",
          "tokenizer": "nori_mixed_tokenizer",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type":  "long"
      },
      "contiName": {
        "type": "text",
        "analyzer": "nori",
        "search_analyzer": "nori",
        "fields": {
          "keyword": { "type": "keyword", "ignore_above": 256 }
        }
      }
    }
  }
}
